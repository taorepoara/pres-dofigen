# maven-package
FROM maven@sha256:a83a1692b72b4225a9c6357781b9fc1b4abce0abcb2fc5d715adb90372607b05 AS maven-package
WORKDIR /app
USER 0:0
RUN \
    --mount=type=bind,target=pom.xml,source=pom.xml \
    --mount=type=bind,target=src,source=src \
    --mount=type=cache,target=/root/.m2,uid=0,gid=0,sharing=locked \
    --mount=type=cache,target=/app/target,uid=0,gid=0,sharing=locked \
    <<EOF
mvn package -DskipTests
mv target/*.jar /tmp/app.jar
EOF

# runtime
